---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import difffusion_black from "../../public/diffusion_black.png";
import ai3_white from "../../public/ai3_white.svg";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "light") {
        document.documentElement.classList.remove("dark");
      } else {
        document.documentElement.classList.add("dark");
      }
    </script>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="AI3 este o comunitate de pasionați de tehnologie, antreprenori și inovatori pasionați de construirea unui ecosistem tehnologic înfloritor în Alba. Suntem un grup divers de oameni cu medii și experiențe diferite, dar împărtășim cu toții aceeași viziune: să facem din Alba un loc mai bun pentru a trăi și a lucra."
    />
    <meta
      property="og:description"
      content="AI3 este o comunitate de pasionați de tehnologie, antreprenori și inovatori pasionați de construirea unui ecosistem tehnologic înfloritor în Alba. Suntem un grup divers de oameni cu medii și experiențe diferite, dar împărtășim cu toții aceeași viziune: să facem din Alba un loc mai bun pentru a trăi și a lucra."
    />
    <meta
      property="og:type"
      content="website"
    />
    <meta
      property="og:url"
      content="https://ai3.ro"
    />
    <meta
      property="og:title"
      content={title}
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/ai3_white.svg"
    />
    <title>{title}</title>
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-zinc-50 dark:bg-[#2E286B]">
    <Navbar
      classes="text-gray-100"
      difffusionLogo={difffusion_black}
      ai3Logo={ai3_white}
    />
    <div class="mx-auto bg-white dark:bg-zinc-900">
      <slot />
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  :root {
    background-color: inherit;
  }
  html {
    font-family: "Open Sans", sans-serif;
    scroll-behavior: smooth;
  }
  html,
  body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .herobg {
    background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
      url("/alba_de_sus.jpeg");
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    padding: 140px 0;
    position: relative;
    background-attachment: fixed;
  }

  .floating {
    transform: translatey(0px);
    animation: float 6s ease-in-out infinite;
    overflow: hidden;
    border-radius: 50%;
    transform: rotate(90deg);
  }

  @keyframes float {
    0% {
      transform: translatey(0px);
    }
    50% {
      transform: translatey(-20px);
    }
    100% {
      transform: translatey(0px);
    }
  }
</style>
