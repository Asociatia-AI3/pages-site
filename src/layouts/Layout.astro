---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import difffusion_black from "../../public/diffusion_black.png";
import ai3 from "../../public/ai3.svg";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="AI3 este o comunitate de pasionați de tehnologie, antreprenori și inovatori pasionați de construirea unui ecosistem tehnologic înfloritor în Alba. Suntem un grup divers de oameni cu medii și experiențe diferite, dar împărtășim cu toții aceeași viziune: să facem din Alba un loc mai bun pentru a trăi și a lucra."
    />
    <meta
      property="og:description"
      content="AI3 este o comunitate de pasionați de tehnologie, antreprenori și inovatori pasionați de construirea unui ecosistem tehnologic înfloritor în Alba. Suntem un grup divers de oameni cu medii și experiențe diferite, dar împărtășim cu toții aceeași viziune: să facem din Alba un loc mai bun pentru a trăi și a lucra."
    />
    <meta
      property="og:type"
      content="website"
    />
    <meta
      property="og:url"
      content="https://ai3.ro"
    />
    <meta
      property="og:title"
      content={title}
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <title>{title}</title>
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-zinc-50">
    <Navbar
      classes="text-gray-100"
      difffusionLogo={difffusion_black}
      ai3Logo={ai3}
    />
    <div class="mx-auto bg-white">
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  :root {
    background-color: white;
  }
  html {
    font-family: "Inter", sans-serif;
    scroll-behavior: smooth;
  }
  html,
  body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .gradient {
    background: linear-gradient(
      180deg,
      #ffffff 0%,
      #ebf9ff 52.47%,
      rgba(245, 245, 245, 0) 100%
    );
  }
</style>
