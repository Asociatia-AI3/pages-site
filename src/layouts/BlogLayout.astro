---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="AI3 este o comunitate de pasionați de tehnologie, antreprenori și inovatori pasionați de construirea unui ecosistem tehnologic înfloritor în Alba. Suntem un grup divers de oameni cu medii și experiențe diferite, dar împărtășim cu toții aceeași viziune: să facem din Alba un loc mai bun pentru a trăi și a lucra."
    />
    <meta
      property="og:description"
      content="AI3 este o comunitate de pasionați de tehnologie, antreprenori și inovatori pasionați de construirea unui ecosistem tehnologic înfloritor în Alba. Suntem un grup divers de oameni cu medii și experiențe diferite, dar împărtășim cu toții aceeași viziune: să facem din Alba un loc mai bun pentru a trăi și a lucra."
    />
    <meta
      property="og:type"
      content="website"
    />
    <meta
      property="og:url"
      content="https://ai3.ro"
    />
    <meta
      property="og:title"
      content={title}
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/ai3_white.svg"
    />
    <title>{title}</title>
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-zinc-50">
    <div>
      <Navbar />
    </div>
    <div class="mx-auto max-w-7xl pt-24 px-4">
      <slot />
    </div>
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    background-color: inherit;
  }
  html {
    font-family: "Open Sans", sans-serif;
  }
  body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
</style>
