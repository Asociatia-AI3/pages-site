---
type Props = {
  text: string;
  href: string;
};

const { text, href } = Astro.props;
---

<a
  href={href}
  class="rounded-md bg-accent px-3.5 py-2.5 text-sm font-semibold text-primary drop-shadow-md shadow-sm hover:bg-accentHover transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
  >{text}</a
>
