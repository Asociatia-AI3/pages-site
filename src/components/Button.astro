---
type Props = {
  text: string;
  href: string;
};

const { text, href } = Astro.props;
---

<a
  href={href}
  class="rounded-lg bg-accent max-w-sm hover:bg-accent/90 px-7 py-3.5 text-sm text-white transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
  >{text}</a
>
