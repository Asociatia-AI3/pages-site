---
import { activities } from "../data";
import Button from "./Button.astro";
---

<div
  class="mx-auto mt-8 md:mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
  {
    activities.map((activity) => (
      <div class="flex flex-col items-start justify-between">
        <div class="relative w-full">
          <img
            src={activity.image}
            alt=""
            class="aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]"
          />
          <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10" />
        </div>
        <div class="max-w-xl">
          <div class="relative">
            <h3 class="mt-5 text-lg font-semibold leading-6 text-gray-900 dark:text-zinc-50">
              {activity.title}
            </h3>
            <p class="mt-5 text-sm leading-6 text-gray-600 dark:text-zinc-500">
              {activity.description}
            </p>
          </div>
          <div class="relative mt-8 flex items-center gap-x-4">
            <Button href={activity.href} text={activity.buttonDesc} />
          </div>
        </div>
      </div>
    ))
  }
</div>
