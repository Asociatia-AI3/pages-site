---
import { navLinks } from "../data";
import MobileNavbar from "../components/MobileNavbar";
---

<header class="absolute inset-x-0 top-0 z-50">
  <nav
    class="hidden md:flex mx-auto max-w-7xl items-center justify-between p-6 lg:px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <a
        href="/"
        class="-m-1.5 p-1.5"
      >
        <span class="sr-only">AI3</span>
        <img
          class="h-16 w-auto"
          src="/logo.png"
          alt=""
        />
      </a>
    </div>

    <div class="hidden lg:flex lg:gap-x-12">
      {
        navLinks.map((route) => (
          <a
            href="#"
            class={`text-sm font-semibold leading-6  hover:text-gray-900 transition ${
              route.classes ? route.classes : "text-gray-700"
            }`}
          >
            {route.route}
          </a>
        ))
      }
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end lg:hover:gap-x-1">
      <a
        href="https://coderdojo.ai3.ro"
        class="text-sm font-semibold leading-6 text-accentHover hover:text-blue-700 transition"
        >CoderDojo <span aria-hidden="true">&rarr;</span></a
      >
    </div>
  </nav>
  <MobileNavbar client:load />
</header>
