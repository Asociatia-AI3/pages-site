---
import { navLinks } from "../data";
import MobileNavbar from "../components/MobileNavbar";
import ThemeToggle from "./ThemeToggle";
import { Image } from "astro:assets";
import logo from "../../public/logo.png";

type Props = {
  classes: string;
  difffusionLogo: ImageMetadata;
  ai3Logo: ImageMetadata;
};

const { classes, difffusionLogo, ai3Logo } = Astro.props;
---

<header class="absolute top-0 inset-x-0 z-50">
  <nav
    class="hidden md:flex mx-auto max-w-7xl items-center justify-between p-6 lg:px-6"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <a
        href="/"
        class="-m-1.5 p-1.5"
      >
        <span class="sr-only">AI3</span>

        <Image
          class="h-24 w-16"
          src={ai3Logo}
          alt="AI3 Logo"
          height="64"
          width="64"
        />
      </a>
    </div>

    <div class="hidden lg:flex lg:gap-x-12 items-center">
      {
        navLinks.map((route) => (
          <a
            href={route.href}
            class="text-base font-medium leading-6 text-[#111928] hover:text-accent transition"
          >
            {route.route}
          </a>
        ))
      }
      <ThemeToggle client:idle />
    </div>
  </nav>
  <MobileNavbar client:idle />
</header>
