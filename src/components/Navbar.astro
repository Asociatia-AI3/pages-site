---
import { navLinks } from "../data";
import MobileNavbar from "../components/MobileNavbar";
import ThemeToggle from "./ThemeToggle";
---

<header class="absolute inset-x-0 top-0 z-50">
  <nav
    class="hidden md:flex mx-auto max-w-7xl items-center justify-between p-6 lg:px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <a
        href="/"
        class="-m-1.5 p-1.5"
      >
        <span class="sr-only">AI3</span>
        <img
          class="h-16 w-16 dark:hidden"
          src="/logo.png"
          alt=""
        />
        <img
          class="h-16 w-16 hidden dark:block"
          src="/ai3_white.svg"
          alt=""
        />
      </a>
    </div>

    <div class="hidden lg:flex lg:gap-x-12">
      {
        navLinks.map((route) => (
          <a
            href={route.href}
            class={`text-sm font-medium  leading-6  hover:text-blue-600 dark:hover:text-blue-600/80 transition ${
              route.class ? route.class : "text-gray-700 dark:text-gray-200"
            }`}
          >
            {route.route}
          </a>
        ))
      }
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end items-center gap-x-4">
      <a href="#"
        ><img
          src="/diffusion_black.png"
          class="w-48 hidden dark:block"
        />
        <img
          src="/diffusion_white.png"
          class="w-48 dark:hidden"
        />
      </a>
      <ThemeToggle client:idle />
    </div>
  </nav>
  <MobileNavbar client:idle />
</header>
