---
import { navLinks } from "../data";
import MobileNavbar from "../components/MobileNavbar";
import ThemeToggle from "./ThemeToggle";
---

<header class="absolute inset-x-0 top-0 z-50">
  <nav
    class="hidden md:flex mx-auto max-w-7xl items-center justify-between p-6 lg:px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <a
        href="/"
        class="-m-1.5 p-1.5"
      >
        <span class="sr-only">AI3</span>
        <img
          class="h-16 w-16 dark:hidden"
          src="/logo.png"
          alt=""
        />
        <img
          class="h-16 w-16 hidden dark:block"
          src="/ai3_white.svg"
          alt=""
        />
      </a>
    </div>

    <div class="hidden lg:flex lg:gap-x-12">
      {
        navLinks.map((route) => (
          <a
            href={route.href}
            class={`text-sm font-semibold leading-6 dark:text-zinc-200 hover:text-accent dark:hover:text-accent transition ${
              route.classes ? route.classes : "text-gray-700"
            }`}
          >
            {route.route}
          </a>
        ))
      }
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end gap-x-4">
      <a
        href="https://coderdojo.ai3.ro"
        class="text-sm font-semibold leading-6 text-accentHover dark:text-blue-500 dark:hover:text-blue-600 hover:text-blue-700 transition"
        >CoderDojo</a
      >
      <ThemeToggle client:load />
    </div>
  </nav>
  <MobileNavbar client:load />
</header>
