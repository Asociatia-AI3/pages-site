---
import MembershipForm from "./MembershipForm.tsx";
import Part from "./Part.astro";
---

<div
  id="member"
  class="relative bg-white dark:bg-darkBg"
>
  <div class="max-w-7xl mx-auto pt-24">
    <Part />
    <div class="sm:text-lg pt-24 grid grid-cols-1 sm:grid-cols-2">
      <div class="max-w-lg">
        <h1 class="text-4xl dark:text-gray-50 px-8 font-bold text-accent">
          Încă un pas și ești unul de-al nostru!
        </h1>
        <p class="text-sm px-8 mt-4 mb-8">
          Completează formularul de înscriere și devino membru AI3!
        </p>
      </div>
      <div>
        <MembershipForm
          buttonText="Aplică"
          client:load
        />
      </div>
    </div>
    <div
      class="relative py-24 sm:py-36 mx-2 text-gray-600 dark:text-gray-400 px-8"
    >
      <div
        class="absolute inset-0 flex items-center"
        aria-hidden="true"
      >
        <div class="w-full border-t border-gray-300"></div>
      </div>
    </div>
  </div>
</div>
