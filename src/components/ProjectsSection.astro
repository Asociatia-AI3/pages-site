---
import Project from "./Project.astro";
import ProjectPlaceholder from "./ProjectPlaceholder.astro";
---

<div
  id="proiecte"
  class="gradient py-24 sm:py-36"
>
  <div class="mx-auto max-w-8xl px-6 lg:px-8">
    <div class="mx-auto max-w-3xl lg:mx-0">
      <h2 class="text-3xl tracking-tight font-semibold text-accent sm:text-4xl">
        Create cu mândrie în Alba, de membrii AI3
      </h2>
    </div>
    <ul
      role="list"
      class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-8 py-8"
    >
      <Project />
      <ProjectPlaceholder />
    </ul>
  </div>
</div>
