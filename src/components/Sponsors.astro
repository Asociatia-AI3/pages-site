---
import Button from "./Button.astro";
import Sponsor from "./Sponsor.astro";
---

<div class="bg-[#E4F7FF] py-24 sm:pt-36">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:max-w-none">
      <div class="flex items-center gap-x-8">
        <h2 class="text-lg font-semibold leading-8 text-zinc-600">
          Inițiative desfășurate cu sprijinul
        </h2>
        <div class="h-px flex-auto bg-blue-200"></div>
      </div>
      <div
        class="mx-auto mt-10 grid sm:grid-cols-2 items-center gap-x-8 gap-y-10 sm:gap-x-10 lg:mx-0 lg:grid-cols-5"
      >
        <Sponsor />
      </div>
    </div>
  </div>
</div>
