---
import { projects } from "../data";
---

<ul
  role="list"
  class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-8 py-8"
>
  {
    projects.map((project) => (
      <li class="group rounded bg-[#E4F7FF] relative shadow-custom aspect-[5/8] hover:scale-105 transition duration-200">
        <img
          src={project.bg}
          class="w-full h-80 brightness-50  object-cover"
        />
        <div class=" px-4 md:px-5 py-4 flex items-center gap-x-2">
          <div>
            <div class="flex items-center gap-x-2">
              <a
                href={project.link}
                class="text-xl pt-4 font-medium leading-7  text-accent  hover:underline transition shadow-myShadow"
              >
                {project.name}
              </a>
            </div>
            <p class="mt-4 text-base font-light  text-primaryText">
              {project.description}
            </p>
            <div class="sm:absolute bottom-2 py-8">
              <div class="flex items-center gap-x-2">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6 h-6 text-gray-900 "
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M11.42 15.17 17.25 21A2.652 2.652 0 0 0 21 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 1 1-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 0 0 4.486-6.336l-3.276 3.277a3.004 3.004 0 0 1-2.25-2.25l3.276-3.276a4.5 4.5 0 0 0-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437 1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008Z"
                  />
                </svg>

                <a
                  href={project.developerLink}
                  class="text-sm leading-6 font-semibold text-accent hover:text-accent/80 transition"
                >
                  {project.developer}
                </a>
              </div>
            </div>
          </div>
        </div>
      </li>
    ))
  }
</ul>
