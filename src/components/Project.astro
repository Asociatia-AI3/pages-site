---
import { projects } from "../data";
---

<ul
  role="list"
  class="mx-auto mt-8 md:mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3"
>
  {
    projects.map((project) => (
      <li>
        <a href="https://iflow.ro">
          <div class="group relative overflow-hidden border-2 broder-white/50 rounded-xl ">
            <div class="group-hover:bg-black/70 w-full h-full absolute z-40 transition-all duration-200 rounded-2xl" />
            <img
              class="group-hover:scale-125 transition-all duration-500 h-72 max-w-3xl"
              src={project.image}
              alt=""
            />
            <img
              src={project.logo}
              class="w-24 max-h-auto -bottom-full left-[40%] absolute group-hover:bottom-32 transition-all duration-300 z-50"
            />
            <div class="absolute -bottom-full left-12 group-hover:bottom-20 transition-all duration-500 z-50">
              <span class="text-gradient">text</span>
            </div>
            <div class="absolute -bottom-full left-12 group-hover:bottom-10 transition-all duration-700 z-50">
              <span class="text-2xl text-white">{project.name}</span>
            </div>
          </div>
        </a>
      </li>
    ))
  }
</ul>
