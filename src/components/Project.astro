---
import { projects } from "../data";
import Button from "./Button.astro";
---

<ul
  role="list"
  class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-6 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-8">
  {
    projects.map((project) => (
      <li class="group rounded-2xl bg-gray-800 relative overflow-hidden">
        <img src={project.bg} class="absolute w-full h-full" />
        <div class="group-hover:bg-slate-800/50 bg-slate-800/80 w-full h-full absolute transition-all duration-200 rounded-2xl" />
        <a href={project.link}>
          <div class="m-auto h-48 w-48 rounded-full md:h-56 md:w-56 z-40 relative flex justify-center items-center">
            <img src={project.logo} alt="" class="w-32 h-32" />
          </div>
        </a>
        <div class="relative px-8 py-4 flex items-center gap-x-4">
          <img
            src={project.developerLogo}
            class={`${project.height ? project.height : "h-8"}`}
          />
          <div>
            <a
              href={project.link}
              class="mt-6 text-base font-semibold leading-7 tracking-tight text-white hover:text-primary transition">
              {project.name}
            </a>
            <a href={project.developerLink}>
              <p class="text-sm leading-6 text-accentHover hover:underline transition">
                {project.developer}
              </p>
            </a>
          </div>
        </div>
      </li>
    ))
  }
</ul>
