---
import { projects } from "../data";
---

<ul
  role="list"
  class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-8 py-8"
>
  {
    projects.map((project) => (
      <li class="relative shadow-custom aspect-[5/8]">
        <img
          src={project.bg}
          class="w-full h-full brightness-50 object-cover rounded-2xl"
        />
        <div class="absolute bottom-8 px-4 md:px-5 py-4 flex items-center gap-x-2">
          <div>
            <a
              href={project.link}
              class=" flex items-center gap-x-2 text-xl pt-4 font-medium leading-7 text-white  hover:underline transition shadow-myShadow"
            >
              <span>{project.name}</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"
                />
              </svg>
            </a>
            <p class="mt-4 text-base  text-gray-200">{project.description}</p>
            <div class="pt-8">
              <a href={project.developerLink}>
                <div class="flex items-center justify-between rounded-3xl py-2.5 px-5 bg-white relative group">
                  <span class="absolute left-0 flex w-0 h-full rounded-3xl  mr-0 transition-all duration-200 ease-out transform translate-x-0 bg-accent group-hover:w-full " />
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="w-6 h-6 text-accent group-hover:text-white z-10"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M11.42 15.17 17.25 21A2.652 2.652 0 0 0 21 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 1 1-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 0 0 4.486-6.336l-3.276 3.277a3.004 3.004 0 0 1-2.25-2.25l3.276-3.276a4.5 4.5 0 0 0-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437 1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008Z"
                    />
                  </svg>
                  <div class="flex items-center gap-x-2 text-accent group-hover:text-white z-10">
                    <span class="text-sm leading-6 font-semibold ">
                      {project.developer}
                    </span>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="w-6 h-6 "
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3"
                      />
                    </svg>
                  </div>
                </div>
              </a>
            </div>
          </div>
        </div>
      </li>
    ))
  }
</ul>
